rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own test results
    match /test_results/{resultId} {
      allow read, write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Users can read and write their own credit transactions
    match /credit_transactions/{transactionId} {
      allow read, write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Anyone can read mentors (public data)
    match /mentors/{mentorId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Anyone can read products (public data)
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Anyone can read community posts (public data)
    match /community_posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Users can read leaderboard data (public read)
    match /test_results/{resultId} {
      allow read: if true; // Allow public read for leaderboard
      allow write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
  }
}
